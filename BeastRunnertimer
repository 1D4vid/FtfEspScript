-- RunnerCooldownBottomRightWorking.local.lua
-- LocalScript -> Coloque em StarterPlayerScripts
-- Minimal, robust bottom-right cooldown (no background), mirrored from LocalPlayer.Character.BeastPowers NumberValue
-- Also keeps head labels for other players as before.

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Root ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RunnerCooldownWorkingGUI"
screenGui.ResetOnSpawn = false
screenGui.DisplayOrder = 5000
screenGui.IgnoreGuiInset = true
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
screenGui.Parent = PlayerGui

-- Helpers
local function tween(inst, props, info)
    info = info or TweenInfo.new(0.12, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    TweenService:Create(inst, info, props):Play()
end

local function makeStroke(parent, thickness, transparency, color)
    local s = Instance.new("UIStroke")
    s.Thickness = thickness or 1.6
    s.Transparency = (transparency ~= nil) and transparency or 0.45
    s.Color = color or Color3.fromRGB(0,0,0)
    s.Parent = parent
    return s
end

local function formatSeconds(n)
    if not n then return "0s" end
    if n >= 10 then
        return tostring(math.floor(n + 0.5)) .. "s"
    else
        return string.format("%.1fs", math.max(0, n))
    end
end

local function percentText(v)
    return tostring(math.floor(v * 100 + 0.5)) .. "%"
end

