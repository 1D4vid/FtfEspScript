-- -------------------------
-- Head labels for other players (unchanged behavior)
-- -------------------------
local function createHeadLabel(player)
    if not player or player == LocalPlayer or not player.Character then return nil end
    local hrp = player.Character:FindFirstChild("HumanoidRootPart") or player.Character:WaitForChild("HumanoidRootPart", 5)
    if not hrp then return nil end
    local bb = hrp:FindFirstChild("BeastPowerBillboard")
    if not bb then
        bb = Instance.new("BillboardGui")
        bb.Name = "BeastPowerBillboard"
        bb.Parent = hrp
        bb.Size = UDim2.new(3.2, 0, 1.8, 0)
        bb.StudsOffset = Vector3.new(0, 5.2, 0)
        bb.AlwaysOnTop = true
        bb.LightInfluence = 0
        bb.MaxDistance = 1e6
    end
    local txt = bb:FindFirstChild("BeastPowerLabel")
    if not txt then
        txt = Instance.new("TextLabel")
        txt.Name = "BeastPowerLabel"
        txt.BackgroundTransparency = 1
        txt.Size = UDim2.new(1,0,1,0)
        txt.Font = Enum.Font.SourceSansBold
        txt.TextScaled = true
        txt.TextWrapped = true
        txt.TextColor3 = Color3.fromRGB(255,255,255)
        txt.Text = ""
        txt.TextXAlignment = Enum.TextXAlignment.Center
        txt.TextYAlignment = Enum.TextYAlignment.Center
        txt.Parent = bb
        makeStroke(txt, 2, 0.45, Color3.fromRGB(0,0,0))
    end
    return txt
end

local state = {
    perPlayer = {},
    playersConn = nil,
    runnerEnabled = false
}

local function connectReactiveForCharacter(player, character)
    if not player or not character then return end
    state.perPlayer[player] = state.perPlayer[player] or {}
    local entry = state.perPlayer[player]

    if entry.numberConn then entry.numberConn:Disconnect() entry.numberConn = nil end
    if entry.beastChildConn then entry.beastChildConn:Disconnect() entry.beastChildConn = nil end
    if entry.beastAdded then entry.beastAdded:Disconnect() entry.beastAdded = nil end
    if entry.beastRemoved then entry.beastRemoved:Disconnect() entry.beastRemoved = nil end

    local function tryConnect()
        if not character or not character.Parent then return end
        local beast = character:FindFirstChild("BeastPowers")
        local label = createHeadLabel(player)
        if beast then
            local nv = beast:FindFirstChildOfClass("NumberValue")
            if nv then
                if label then label.Text = percentText(nv.Value) end
                entry.numberConn = nv.Changed:Connect(function()
                    if label then label.Text = percentText(nv.Value) end
                end)
            else
                if label then label.Text = "" end
                entry.beastChildConn = beast.ChildAdded:Connect(function(child)
                    if child:IsA("NumberValue") then
                        task.wait(0.02)
                        tryConnect()
                    end
                end)
            end
        else
            if label then label.Text = "" end
        end
    end

    entry.beastAdded = character.ChildAdded:Connect(function(c)
        if c.Name == "BeastPowers" then
            task.wait(0.04)
            tryConnect()
        end
    end)
    entry.beastRemoved = character.ChildRemoved:Connect(function(c)
        if c.Name == "BeastPowers" then
            if entry.numberConn then entry.numberConn:Disconnect() entry.numberConn = nil end
            if entry.beastChildConn then entry.beastChildConn:Disconnect() entry.beastChildConn = nil end
        end
    end)

    tryConnect()
end

local function attachPlayers()
    for _, pl in ipairs(Players:GetPlayers()) do
        if pl ~= LocalPlayer then
            state.perPlayer[pl] = state.perPlayer[pl] or {}
            if state.perPlayer[pl].charConn then state.perPlayer[pl].charConn:Disconnect() state.perPlayer[pl].charConn = nil end
            state.perPlayer[pl].charConn = pl.CharacterAdded:Connect(function(c)
                task.wait(0.35)
                createHeadLabel(pl)
                connectReactiveForCharacter(pl, c)
            end)
            if pl.Character then
                createHeadLabel(pl)
                connectReactiveForCharacter(pl, pl.Character)
            end
        end
    end
end

local function cleanupHeads()
    for pl, entry in pairs(state.perPlayer) do
        if entry.charConn then entry.charConn:Disconnect() end
        if entry.numberConn then entry.numberConn:Disconnect() end
        if entry.beastChildConn then entry.beastChildConn:Disconnect() end
        state.perPlayer[pl] = nil
    end
    if state.playersConn then state.playersConn:Disconnect() state.playersConn = nil end
    for _, pl in ipairs(Players:GetPlayers()) do
        if pl.Character then
            local hrp = pl.Character:FindFirstChild("HumanoidRootPart")
            if hrp then
                local bb = hrp:FindFirstChild("BeastPowerBillboard")
                if bb then bb:Destroy() end
            end
        end
    end
end

-- -------------------------
-- Bottom-right cooldown (robust & minimal, no background)
-- -------------------------
local cooldownContainer = Instance.new("Frame")
cooldownContainer.Name = "CooldownContainer"
cooldownContainer.AnchorPoint = Vector2.new(1, 1)
cooldownContainer.Size = UDim2.new(0, 220, 0, 44)
cooldownContainer.Position = UDim2.new(1, -16, 1, -12)
cooldownContainer.BackgroundTransparency = 1
cooldownContainer.BorderSizePixel = 0
cooldownContainer.ZIndex = 500
cooldownContainer.Parent = screenGui

local cooldownTitle = Instance.new("TextLabel")
cooldownTitle.Name = "CooldownTitle"
cooldownTitle.Size = UDim2.new(1, 0, 0, 18)
cooldownTitle.Position = UDim2.new(0, 0, 0, 0)
cooldownTitle.BackgroundTransparency = 1
cooldownTitle.Font = Enum.Font.SourceSansSemibold
cooldownTitle.TextSize = 14
cooldownTitle.TextScaled = true
cooldownTitle.Text = "BeastPower Cooldown"
cooldownTitle.TextColor3 = Color3.fromRGB(245,245,245)
cooldownTitle.TextXAlignment = Enum.TextXAlignment.Right
cooldownTitle.TextYAlignment = Enum.TextYAlignment.Center
cooldownTitle.Parent = cooldownContainer
makeStroke(cooldownTitle, 1.2, 0.45, Color3.fromRGB(0,0,0))

local cooldownValue = Instance.new("TextLabel")
cooldownValue.Name = "CooldownValue"
cooldownValue.Size = UDim2.new(1, 0, 0, 26)
cooldownValue.Position = UDim2.new(0, 0, 0, 18)
cooldownValue.BackgroundTransparency = 1
cooldownValue.Font = Enum.Font.SourceSansBold
cooldownValue.TextSize = 22
cooldownValue.TextScaled = true
cooldownValue.Text = "0s"
cooldownValue.TextColor3 = Color3.fromRGB(255,255,255)
cooldownValue.TextXAlignment = Enum.TextXAlignment.Right
cooldownValue.TextYAlignment = Enum.TextYAlignment.Center
cooldownValue.Parent = cooldownContainer
makeStroke(cooldownValue, 2, 0.45, Color3.fromRGB(0,0,0))

cooldownContainer.Visible = false

-- Find NumberValue in LocalPlayer.Character.BeastPowers (search common names; fallback to first)
local function findLocalCooldownNumberValue()
    local char = LocalPlayer.Character
    if not char then return nil end
    local beast = char:FindFirstChild("BeastPowers")
    if not beast then return nil end
    local preferred = {"Cooldown", "BeastCooldown", "CooldownTime", "CooldownSec", "CooldownSeconds", "CooldownVal"}
    for _, name in ipairs(preferred) do
        local nv = beast:FindFirstChild(name)
        if nv and nv:IsA("NumberValue") then return nv end
    end
    return beast:FindFirstChildOfClass("NumberValue")
end

local localCooldownConn = nil
local localBeastChildConn = nil
local localBeastRemovedConn = nil
local pollingTask = nil
local pollingCancel = false

local function disconnectLocalConns()
    if localCooldownConn then localCooldownConn:Disconnect() localCooldownConn = nil end
    if localBeastChildConn then localBeastChildConn:Disconnect() localBeastChildConn = nil end
    if localBeastRemovedConn then localBeastRemovedConn:Disconnect() localBeastRemovedConn = nil end
    pollingCancel = true
    pollingTask = nil
end

-- Poll loop to detect NumberValue if not immediately present; lightweight and cancels when found or runner disabled
local function startPollingForLocalNV()
    if pollingTask then return end
    pollingCancel = false
    pollingTask = task.spawn(function()
        while not pollingCancel and state.runnerEnabled do
            local nv = findLocalCooldownNumberValue()
            if nv then
                -- found: connect and stop polling
                connectLocalCooldown()
                return
            else
                -- update shown value to 0s while waiting so user sees the panel
                cooldownValue.Text = "0s"
                cooldownContainer.Visible = true
                task.wait(0.5)
            end
        end
    end)
end

function connectLocalCooldown()
    -- ensure previous disconnected
    disconnectLocalConns()
    cooldownContainer.Visible = false

    local char = LocalPlayer.Character
    if not char then
        startPollingForLocalNV()
        return
    end
    local beast = char:FindFirstChild("BeastPowers")
    if not beast then
        startPollingForLocalNV()
        -- also listen for BeastPowers creation on character
        localBeastChildConn = char.ChildAdded:Connect(function(child)
            if child.Name == "BeastPowers" then
                task.wait(0.02)
                connectLocalCooldown()
            end
        end)
        return
    end

    local nv = findLocalCooldownNumberValue()
    if not nv then
        startPollingForLocalNV()
        -- listen for NumberValue inside BeastPowers
        localBeastChildConn = beast.ChildAdded:Connect(function(child)
            if child:IsA("NumberValue") then
                task.wait(0.02)
                connectLocalCooldown()
            end
        end)
        localBeastRemovedConn = char.ChildRemoved:Connect(function(child)
            if child == beast then
                cooldownContainer.Visible = false
            end
        end)
        return
    end

    -- Found NumberValue: show panel and connect Changed
    cooldownContainer.Visible = true
    cooldownValue.Text = formatSeconds(nv.Value)
    localCooldownConn = nv.Changed:Connect(function()
        if nv.Parent then
            cooldownValue.Text = formatSeconds(nv.Value)
        else
            cooldownValue.Text = "0s"
        end
    end)

    -- hide on BeastPowers removal
    localBeastRemovedConn = char.ChildRemoved:Connect(function(child)
        if child == beast then
            disconnectLocalConns()
            cooldownContainer.Visible = false
        end
    end)
end

-- Try to detect a common BoolValue that signals match state (optional). If found, hide UI when match ends.
local function findMatchBool()
    local containers = {workspace, game:GetService("ReplicatedStorage"), game:GetService("ServerStorage")}
    local names = {"MatchInProgress", "MatchActive", "RoundActive", "MatchFinished", "GameActive", "GameFinished", "RoundRunning"}
    for _, container in ipairs(containers) do
        if container then
            for _, name in ipairs(names) do
                local found = container:FindFirstChild(name, true)
                if found and found:IsA("BoolValue") then
                    return found
                end
            end
        end
    end
    return nil
end

local matchStateObj = findMatchBool()
local matchConn = nil
local function onMatchChanged()
    if not matchStateObj then return end
    if matchStateObj.Value == false then
        cooldownContainer.Visible = false
        cleanupHeads()
    else
        if state.runnerEnabled then connectLocalCooldown() end
    end
end
if matchStateObj then
    matchConn = matchStateObj.Changed:Connect(onMatchChanged)
    onMatchChanged()
end

-- Enable / Disable runner and cleanup
local function enableRunner()
    if state.runnerEnabled then return end
    state.runnerEnabled = true
    toggleBtn.BackgroundColor3 = Color3.fromRGB(0,160,90)
    toggleBtn.Text = "ON"

    -- attach players
    state.playersConn = Players.PlayerAdded:Connect(function(pl)
        task.wait(0.25)
        if pl ~= LocalPlayer then
            state.perPlayer[pl] = state.perPlayer[pl] or {}
            state.perPlayer[pl].charConn = pl.CharacterAdded:Connect(function(c)
                task.wait(0.35)
                createHeadLabel(pl)
                connectReactiveForCharacter(pl, c)
            end)
            if pl.Character then
                createHeadLabel(pl)
                connectReactiveForCharacter(pl, pl.Character)
            end
        end
    end)
    attachPlayers()

    -- local cooldown UI
    connectLocalCooldown()
end

local function disableRunner()
    if not state.runnerEnabled then return end
    state.runnerEnabled = false
    toggleBtn.BackgroundColor3 = Color3.fromRGB(170,0,0)
    toggleBtn.Text = "OFF"

    -- cleanup player listeners and head labels
    for pl, entry in pairs(state.perPlayer) do
        if entry.charConn then entry.charConn:Disconnect() end
        if entry.numberConn then entry.numberConn:Disconnect() end
        if entry.beastChildConn then entry.beastChildConn:Disconnect() end
        state.perPlayer[pl] = nil
    end
    if state.playersConn then state.playersConn:Disconnect() state.playersConn = nil end
    cleanupHeads()

    -- cleanup local cooldown
    disconnectLocalConns()
    cooldownContainer.Visible = false
end

toggleBtn.MouseButton1Click:Connect(function()
    if state.runnerEnabled then disableRunner() else enableRunner() end
end)

-- Toggle menu with L
local menuVisible = false
UserInputService.InputBegan:Connect(function(input, gp)
    if gp then return end
    if input.UserInputType == Enum.UserInputType.Keyboard and input.KeyCode == Enum.KeyCode.L then
        menuVisible = not menuVisible
        if menuVisible then
            menu.Visible = true
            menu.Position = UDim2.new(0.5, 0, 0.35, 0)
            menu.BackgroundTransparency = 1
            tween(menu, {Position = UDim2.new(0.5, 0, 0.45, 0), BackgroundTransparency = 0}, TweenInfo.new(0.14))
        else
            tween(menu, {Position = UDim2.new(0.5, 0, 0.38, 0), BackgroundTransparency = 1}, TweenInfo.new(0.12))
            task.delay(0.12, function() if menu then menu.Visible = false end end)
        end
    end
end)

-- Hint animation (show 5s)
task.spawn(function()
    task.wait(0.12)
    hint.TextTransparency = 1
    tween(hint, {TextTransparency = 0}, TweenInfo.new(0.12))
    task.wait(5)
    tween(hint, {TextTransparency = 1}, TweenInfo.new(0.12))
    task.delay(0.12, function() if hint and hint.Parent then hint:Destroy() end end)
end)

-- Reconnect local cooldown on respawn while runner enabled
LocalPlayer.CharacterAdded:Connect(function()
    task.wait(0.18)
    if state.runnerEnabled then
        connectLocalCooldown()
    end
end)

-- Ensure cooldown visible state when script starts if runner already enabled externally (unlikely)
if state.runnerEnabled then
    connectLocalCooldown()
end

-- End of script
